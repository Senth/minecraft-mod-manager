{
  "name": "minecraft-mod-manager",
  "description": "Mod manager for Minecraft",
  "version": "2.0.0",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120",
      "npm jest:lint --passWithNoTests",
      "git add"
    ],
    "*.ts": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120",
      "eslint --fix",
      "git add"
    ],
    "*.tsx": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120",
      "eslint --fix",
      "git add"
    ],
    "*.yml": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "test": "lerna run test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.16.10",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/experimental-utils": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "eslint": "8.7.0",
    "eslint-plugin-jest": "25.7.0",
    "faker": "6.6.6",
    "jest": "27.4.7",
    "jest-mock-extended": "2.0.4",
    "lerna": "^4.0.0",
    "markdownlint-cli2": "^0.4.0",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "private": true
}
